@model IEnumerable<EventPlanningAndManagementSystem.ViewModels.Registration.RegistrationViewModel>

@{
    ViewData["Title"] = "My Events";
}

<h2 class="mt-4">@ViewData["Title"]</h2>
<hr />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        You haven't registered for any events yet.
    </div>
}
else
{
    <div class="row text-center">
        @foreach (var reg in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@reg.EventName</h5>
                        <p class="card-text">
                            <small>Registered on: @reg.RegisteredOn.ToShortDateString()</small><br />
                            <small>
                                Status:
                                @if (reg.IsConfirmed)
                                {
                                    <span class="text-success">Confirmed</span>
                                }
                                else
                                {
                                    <span class="text-muted">Pending</span>
                                }
                            </small>
                        </p>
                        <a asp-controller="Events" asp-action="Details" asp-route-id="@reg.EventId" class="btn btn-outline-info mt-auto">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
