@model IEnumerable<EventPlanningAndManagementSystem.Data.EventPlanningAndManagementSystem.Data.Models.Location>

@{
    ViewData["Title"] = "Locations";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Location</a>
<a asp-controller="Events" asp-action="Index" class="btn btn-primary mb-3">Back</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var location in Model)
        {
            <tr>
                <td>@location.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@location.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@location.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this location?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
