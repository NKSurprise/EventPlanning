@using EventPlanningAndManagementSystem.ViewModels.Event
@model EditEventViewModel

@{
    ViewData["Title"] = "Edit Event";
    string today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="Name" class="form-label-add-edit">Event Name</label>
                    <input asp-for="Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-sm-6 mb-2">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="(SelectList)ViewBag.Categories">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="col-sm-6 mb-2">
                    <label asp-for="LocationId"></label>
                    <select asp-for="LocationId" class="form-control" asp-items="(SelectList)ViewBag.Locations">
                        <option value="">-- Select Location --</option>
                    </select>
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>

            </div>

            <div class="mb-2">
                <label asp-for="Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="ImageUrl" class="form-label-add-edit">Image URL</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="col-sm-6 mb-2">
                <label asp-for="PublishedOn" class="form-label-add-edit">Published On</label>
                <input asp-for="PublishedOn" class="form-control" type="text" value="@(Model.PublishedOn == default ? today : Model.PublishedOn.ToString("dd-MM-yyyy"))" />
                <span asp-validation-for="PublishedOn" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <button type="submit" class="btn btn-primary mb-3">Save Changes</button>
                <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary mb-3">Back</a>
            </div>
        </form>
    </div>
</div>
