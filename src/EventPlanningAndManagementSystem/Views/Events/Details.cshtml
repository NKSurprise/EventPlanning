@using EventPlanningAndManagementSystem.ViewModels.Event
@model EventDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm border-0 p-4 bg-white">
                <h2 class="card-title mb-4 fw-semibold text-center">@ViewData["Title"]</h2>
                <div class="row g-4 align-items-center">
                    <div class="col-md-4 text-center">
                        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3 shadow-sm" style="max-height: 300px; object-fit: cover;" />
                        }
                        else
                        {
                            <p><em>No image available</em></p>
                        }
                    </div>
                    <div class="col-md-8">
                        <h3 class="fw-bold mb-2">@Model.Name</h3>
                        <hr />
                        <p>@Model.Description</p>
                        <hr />
                        <div class="row mb-2">
                            <div class="col-6 col-md-4"><strong>Category:</strong></div>
                            <div class="col-6 col-md-8">@Model.CategoryName</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6 col-md-4"><strong>Location:</strong></div>
                            <div class="col-6 col-md-8">@Model.LocationName</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6 col-md-4"><strong>Published On:</strong></div>
                            <div class="col-6 col-md-8">@Model.PublishedOn</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6 col-md-4"><strong>Publisher:</strong></div>
                            <div class="col-6 col-md-8">@Model.PublisherName</div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="d-flex flex-wrap gap-2 justify-content-center mt-3">
                    <a asp-action="Index" class="btn btn-warning transition-btn">Back</a>
                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary transition-btn">Edit</a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger transition-btn">Delete</button>
                        </form>
                    }
                    <form asp-controller="Registration" asp-action="ToggleRegister" method="post" class="d-inline">
                        <input type="hidden" name="eventId" value="@Model.Id" />
                        <button type="submit" class="btn btn-outline-primary transition-btn">
                            <i class="fas fa-star"></i> @(Model.IsUserRegistered ? (Model.IsConfirmed ? "Remove from Event" : "Leave Waitlist") : "Join Waitlist")
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-btn {
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    }
    .transition-btn:hover, .transition-btn:focus {
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        filter: brightness(0.97);
    }
</style>
