@using EventPlanningAndManagementSystem.ViewModels.Event
@model EventDetailsViewModel
@{
    ViewData["Title"] = "Destination Details";
}

<h2 class="mb-4">Destination Details</h2>
<hr />

<div class="row">
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid mb-3" style="max-height: 300px;" />
        }
        else
        {
            <p><em>No image available</em></p>
        }
    </div>

    <div class="col-md-8">
        <h3 class="fw-bold">@Model.Name</h3>
        <hr />
        <p>@Model.Description</p>
        <hr />

        <p>
            <strong>Category:</strong> @Model.CategoryName
        </p>
        <p>
            <strong>Location:</strong> @Model.LocationName
        </p>
        <p>
            <strong>Published On:</strong> @Model.PublishedOn
        </p>
        <p>
			<strong>Publisher:</strong> @Model.PublisherName
        </p>
    </div>
</div>

<hr />

<div class="mt-4">
    <a asp-action="Index" class="btn btn-warning">Back</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <form asp-controller="Registration" asp-action="ToggleRegister" method="post" class="d-inline">
        <input type="hidden" name="eventId" value="@Model.Id" />
        <button type="submit" class="btn btn-outline-primary">
            <i class="fas fa-star"></i> @(Model.IsUserRegistered ? "Unregister" : "Register")
        </button>
    </form>



</div>
