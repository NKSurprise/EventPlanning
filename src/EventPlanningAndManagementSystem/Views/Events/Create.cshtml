@using EventPlanningAndManagementSystem.ViewModels.Event
@model AddEventInputModel

@{
    ViewData["Title"] = "Create Event";
    string today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm border-0 p-4 bg-white">
                <h2 class="card-title mb-4 fw-semibold text-center">@ViewData["Title"]</h2>
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label asp-for="Name" class="form-label">Event Name</label>
                            <input asp-for="Name" class="form-control" aria-required="true" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="LocationId" class="form-label">Select Location</label>
                            <select asp-for="LocationId" class="form-select" asp-items="Model.Locations">
                                <option value="">...</option>
                            </select>
                            <span asp-validation-for="LocationId" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="CategoryId" class="form-label">Select Category</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="Model.Categories">
                                <option value="">...</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="ImageUrl" class="form-label">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL (optional)" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="PublishedOn" class="form-label">Published On</label>
                            <input asp-for="PublishedOn" class="form-control" type="text" value="@(string.IsNullOrEmpty(Model.PublishedOn) ? today : Model.PublishedOn)" />
                            <span asp-validation-for="PublishedOn" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex flex-column flex-md-row gap-2 mt-4 justify-content-center">
                        <button type="submit" class="btn btn-primary transition-btn">Create</button>
                        <a asp-action="Index" class="btn btn-outline-secondary transition-btn">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-btn {
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    }
    .transition-btn:hover, .transition-btn:focus {
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        filter: brightness(0.97);
    }
</style>
