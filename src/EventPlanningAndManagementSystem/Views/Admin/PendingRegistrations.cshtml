@using EventPlanningAndManagementSystem.ViewModels.AdminRequests;
@model IEnumerable<PendingRegistrationViewModel>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h2 class="card-title mb-4 fw-semibold text-center">Pending Registrations</h2>
                    <div class="table-responsive">
                        <table class="table align-middle table-hover table-borderless mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Event</th>
                                    <th scope="col">User</th>
                                    <th scope="col">Registered On</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reg in Model)
                                {
                                    <tr class="transition-table-row">
                                        <td class="fw-medium">@reg.EventName</td>
                                        <td>@reg.UserEmail</td>
                                        <td>@reg.RegisteredOn.ToString("dd-MM-yyyy")</td>
                                        <td class="text-center">
                                            <div class="d-flex flex-column flex-md-row gap-2 justify-content-center">
                                                <form asp-action="ConfirmRegistration" asp-controller="Admin" method="post" class="m-0">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@reg.RegistrationId" />
                                                    <button class="btn btn-success btn-sm px-3 py-1 transition-btn" type="submit">Confirm</button>
                                                </form>
                                                <form asp-action="DenyRegistration" method="post" class="m-0">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@reg.RegistrationId" />
                                                    <button class="btn btn-outline-danger btn-sm px-3 py-1 transition-btn" type="submit">Deny</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-btn {
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    }
    .transition-btn:hover, .transition-btn:focus {
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        filter: brightness(0.97);
    }
    .transition-table-row {
        transition: background 0.2s;
    }
    .transition-table-row:hover {
        background: #f8f9fa;
    }
</style>
