@model EventPlanningAndManagementSystem.Data.EventPlanningAndManagementSystem.Data.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 p-4 bg-white">
                <h2 class="card-title mb-4 fw-semibold text-center">@ViewData["Title"]</h2>
                <form asp-action="Edit" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="d-flex flex-column flex-md-row gap-2 mt-3 justify-content-center">
                        <button type="submit" class="btn btn-warning px-4 transition-btn">Save</button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 transition-btn">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-btn {
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    }
    .transition-btn:hover, .transition-btn:focus {
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        filter: brightness(0.97);
    }
</style>